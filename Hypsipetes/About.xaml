<Window x:Class="Hypsipetes.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="250" Width="300" Loaded="Window_Loaded"
        ResizeMode="NoResize"
        ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="aboutMessage" HorizontalAlignment="Stretch" Height="154" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" IsCancel="True"/>
    </Grid>
</Window>
